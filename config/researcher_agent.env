# Researcher Agent Configuration
# Environment variables for researcher agent functionality

# Research Run Settings
RESEARCH_RUN_TIMEOUT_MINUTES=30
RESEARCH_RUN_MAX_SOURCES=50
RESEARCH_RUN_PARALLEL_PROCESSING=true
RESEARCH_RUN_BATCH_SIZE=10

# Quality Assessment Settings
QUALITY_THRESHOLD_CREDIBILITY=0.7
QUALITY_THRESHOLD_RELEVANCE=0.6
QUALITY_THRESHOLD_FRESHNESS=0.5
QUALITY_THRESHOLD_COMPLETENESS=0.4
QUALITY_THRESHOLD_OVERALL=0.65

# External API Rate Limits
GOOGLE_SEARCH_RATE_LIMIT_PER_MINUTE=10
SEMANTIC_SCHOLAR_RATE_LIMIT_PER_MINUTE=5
NEWS_API_RATE_LIMIT_PER_MINUTE=30

# Content Discovery Settings
CONTENT_DISCOVERY_MAX_PAGES=5
CONTENT_DISCOVERY_TIMEOUT_SECONDS=30
CONTENT_DISCOVERY_USER_AGENT="BrainForge Researcher Agent/1.0"

# AI Integration Settings
AI_SUMMARIZATION_MODEL="gpt-4"
AI_CLASSIFICATION_MODEL="gpt-4"
AI_QUALITY_ASSESSMENT_MODEL="gpt-4"

# Review Workflow Settings
REVIEW_QUEUE_AUTO_ASSIGN=true
REVIEW_QUEUE_PRIORITY_WEIGHT_CREDIBILITY=0.3
REVIEW_QUEUE_PRIORITY_WEIGHT_RELEVANCE=0.4
REVIEW_QUEUE_PRIORITY_WEIGHT_FRESHNESS=0.2
REVIEW_QUEUE_PRIORITY_WEIGHT_COMPLETENESS=0.1

# Integration Proposal Settings
INTEGRATION_CONFIDENCE_THRESHOLD=0.7
INTEGRATION_SIMILARITY_THRESHOLD=0.8
INTEGRATION_MAX_SUGGESTIONS=5

# Audit and Monitoring
AUDIT_TRAIL_ENABLED=true
AUDIT_TRAIL_RETENTION_DAYS=90
PERFORMANCE_METRICS_ENABLED=true

# Error Handling
RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=5
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT_MINUTES=10