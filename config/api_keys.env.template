# External API Keys Template
# Copy this file to config/api_keys.env and fill in your actual API keys

# Google Custom Search API
GOOGLE_CUSTOM_SEARCH_API_KEY=your_google_custom_search_api_key_here
GOOGLE_CUSTOM_SEARCH_ENGINE_ID=your_google_custom_search_engine_id_here

# Semantic Scholar API
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_api_key_here

# NewsAPI
NEWS_API_KEY=your_newsapi_key_here

# OpenAI API (for AI integration)
OPENAI_API_KEY=your_openai_api_key_here

# Other AI providers (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# Web scraping settings (for fallback content extraction)
SCRAPINGBEE_API_KEY=your_scrapingbee_api_key_here
SCRAPERAPI_KEY=your_scraperapi_key_here

# Rate limiting configuration (overrides defaults if needed)
GOOGLE_SEARCH_RATE_LIMIT_PER_MINUTE=10
SEMANTIC_SCHOLAR_RATE_LIMIT_PER_MINUTE=5
NEWS_API_RATE_LIMIT_PER_MINUTE=30
OPENAI_RATE_LIMIT_PER_MINUTE=60

# API endpoint URLs (usually don't need to change)
GOOGLE_CUSTOM_SEARCH_BASE_URL=https://www.googleapis.com/customsearch/v1
SEMANTIC_SCHOLAR_BASE_URL=https://api.semanticscholar.org/v1
NEWS_API_BASE_URL=https://newsapi.org/v2
OPENAI_BASE_URL=https://api.openai.com/v1