# Database Configuration
# Replace with your actual database connection string
DATABASE_URL=postgresql://username:password@localhost/brainforge

# Embedding Model Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# Security Configuration
# Generate a secure secret key for authentication (min 32 characters)
SECRET_KEY=your-secure-secret-key-here-minimum-32-characters-long

# API Keys for External Services
# Replace with your actual API keys
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_SEARCH_API_KEY=your-google-search-api-key-here
NEWS_API_KEY=your-news-api-key-here
SEMANTIC_SCHOLAR_API_KEY=your-semantic-scholar-api-key-here

# Development Settings
LOG_LEVEL=INFO
DEBUG=false

# Obsidian Integration (Optional)
OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault

# Research Agent Configuration
RESEARCH_AGENT_MODEL=gpt-4
RESEARCH_AGENT_TEMPERATURE=0.7
RESEARCH_AGENT_MAX_TOKENS=4000

# Quality Assessment Settings
QUALITY_THRESHOLD=0.7
RELEVANCE_THRESHOLD=0.6
CREDIBILITY_THRESHOLD=0.8

# Vector Database Settings
VECTOR_DIMENSION=1536
SIMILARITY_THRESHOLD=0.75

# Application Settings
HOST=0.0.0.0
PORT=8000